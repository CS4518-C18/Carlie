<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/linearLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <EditText
        android:id="@+id/editText"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginBottom="45dp"
        android:hint="@string/pickup_location"
        android:paddingEnd="@dimen/place_info_padding"
        android:paddingStart="@dimen/place_info_padding"
        app:layout_constraintBottom_toTopOf="@+id/place_autocomplete_listView"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/drop_off_location_edit_text"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:hint="@string/drop_off_location"
        android:paddingEnd="@dimen/place_info_padding"
        android:paddingStart="@dimen/place_info_padding"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/editText" />


    <ListView
        android:id="@+id/place_autocomplete_listView"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintStart_toStartOf="@+id/drop_off_location_edit_text"
        app:layout_constraintTop_toBottomOf="@+id/editText">

    </ListView>
</android.support.constraint.ConstraintLayout>